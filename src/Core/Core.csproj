<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <TargetFramework>net5.0</TargetFramework>
    <RootNamespace>GISharp</RootNamespace>
    <AssemblyName>GISharp.Runtime</AssemblyName>
    <CheckForOverflowUnderflow>true</CheckForOverflowUnderflow>
    <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
    <GenerateDocumentationFile>true</GenerateDocumentationFile>
    <LangVersion>9.0</LangVersion>
    <Nullable>enable</Nullable>
    <TreatWarningsAsErrors>true</TreatWarningsAsErrors>
  </PropertyGroup>
  <ItemGroup Condition="$([MSBuild]::IsOSUnixLike())">
    <Compile Remove="Runtime\CLong32.cs" />
    <Compile Remove="Runtime\CULong32.cs" />
  </ItemGroup>
  <ItemGroup Condition="!$([MSBuild]::IsOSUnixLike())">
    <Compile Remove="Runtime\CLong64.cs" />
    <Compile Remove="Runtime\CULong64.cs" />
  </ItemGroup>
  <ItemGroup>
    <PackageReference Include="Microsoft.Extensions.Logging" Version="3.1.3" />
    <PackageReference Include="System.Runtime.CompilerServices.Unsafe" Version="5.0.0" />
  </ItemGroup>
</Project>