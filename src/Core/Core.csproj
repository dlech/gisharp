<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <TargetFramework>netstandard2.1</TargetFramework>
    <RootNamespace>GISharp</RootNamespace>
    <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
    <LangVersion>8.0</LangVersion>
    <Nullable>enable</Nullable>
    <TreatWarningsAsErrors>true</TreatWarningsAsErrors>
    <NoWarn>IDE1006</NoWarn>
  </PropertyGroup>
  <ItemGroup Condition="$([MSBuild]::IsOSUnixLike())">
    <Compile Remove="Runtime\CLong32.cs" />
    <Compile Remove="Runtime\CULong32.cs" />
  </ItemGroup>
  <ItemGroup Condition="!$([MSBuild]::IsOSUnixLike())">
    <Compile Remove="Runtime\CLong64.cs" />
    <Compile Remove="Runtime\CULong64.cs" />
  </ItemGroup>
  <ItemGroup>
    <PackageReference Include="System.Runtime.CompilerServices.Unsafe" Version="4.5.2" />
  </ItemGroup>
</Project>